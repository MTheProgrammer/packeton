{% extends "layout.html.twig" %}

{% block scripts %}
    <script src="{{ asset('packeton/js/submitPackage.js')}}"></script>
{% endblock %}

{% set showSearchDesc = 'hide' %}

{% block content %}
<h2 class="title">{{ 'submit.title'|trans }}</h2>

<section class="row">
    {{ form_start(form, { attr: { class: 'col-md-6', 'data-check-url': path('submit.fetch_info', {'type': type}), 'data-submit-url': path('submit'), id: 'submit-package-form' } }) }}
        {% block submit_form %}
            {{ form_widget(form) }}
            {{ form_rest(form) }}
            <input class="btn btn-block btn-success btn-lg" id="submit" type="submit" value="{{ 'submit.submit'|trans }}" />
        {% endblock %}
    {{ form_end(form) }}

    <div class="col-md-6">
        {% block submit_form_guide %}
            {{ 'submit.guide'|trans({ '%path_about%': path('about'), '%credentials%': path('user_add_sshkey') })|raw }}
        {% endblock %}
    </div>
</section>
{% endblock %}
